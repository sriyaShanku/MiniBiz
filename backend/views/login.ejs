<%- include('partials/header', { title: 'MiniBiz | Login or Register' }) %>

<main class="section-padding-sm">
    <div class="container">
        <div class="card login-register-container">

            <!-- Display Flash Messages -->
            <% if (locals.error_msg && error_msg.length > 0) { %>
                <div class="alert alert-danger" style="background-color: #f8d7da; color: #721c24; padding: 10px; border-radius: 5px; margin-bottom: 15px;">
                    <%= error_msg %>
                </div>
            <% } %>
            <% if (locals.success_msg && success_msg.length > 0) { %>
                <div class="alert alert-success" style="background-color: #d4edda; color: #155724; padding: 10px; border-radius: 5px; margin-bottom: 15px;">
                    <%= success_msg %>
                </div>
            <% } %>
            <% if (locals.error && error.length > 0) { %> <!-- For Passport's own error messages -->
                <div class="alert alert-danger" style="background-color: #f8d7da; color: #721c24; padding: 10px; border-radius: 5px; margin-bottom: 15px;">
                    <%= error %>
                </div>
            <% } %>


            <!-- Login Form (Default View) -->
            <div id="login-form-container" style="<%= (locals.showRegisterForm ? 'display: none;' : 'display: block;') %>">
                <h1 class="text-center">Welcome Back!</h1>
                <p class="text-center text-muted">Login to access your account.</p>
                <form id="login-form" action="/auth/login" method="POST" style="margin-top: 30px;">
                    <div class="form-group">
                        <label for="login-email">Email Address</label>
                        <input type="email" id="login-email" name="email" required placeholder="you@example.com" value="<%= typeof email != 'undefined' ? email : '' %>">
                    </div>
                    <div class="form-group">
                        <label for="login-password">Password</label>
                        <input type="password" id="login-password" name="password" required placeholder="Enter your password">
                    </div>
                     <div class="form-group" style="display: flex; justify-content: space-between; align-items: center; font-size: 0.9rem;">
                        <div class="form-check" style="margin-bottom: 0;">
                            <input type="checkbox" id="remember-me" name="remember">
                            <label for="remember-me"> Remember Me</label>
                        </div>
                        <a href="/auth/forgot-password">Forgot Password?</a> <!-- Add this route later -->
                    </div>
                    <button type="submit" class="btn btn-primary" style="width: 100%; padding: 14px;">Login</button>
                </form>
                <p class="form-switch-links text-muted">
                    Don't have an account? <a href="#register" id="show-register">Register Now</a>
                </p>
            </div>

             <!-- Register Form (Initially Hidden or shown based on backend var) -->
             <div id="register-form-container" style="  <%= (locals.showRegisterForm ? 'display: block;' : 'display: none;') %>">
                <h1 class="text-center">Create Your Account</h1>
                <p class="text-center text-muted">Join the MiniBiz community!</p>
                 <form id="register-form" action="/auth/register" method="POST" style="margin-top: 30px;">
                     <div class="form-group">
                        <label for="register-name">Full Name *</label>
                        <input type="text" id="register-name" name="name" required placeholder="Your Full Name" value="<%= typeof name != 'undefined' ? name : '' %>">
                    </div>
                    <div class="form-group">
                        <label for="register-email">Email Address *</label>
                        <input type="email" id="register-email" name="email" required placeholder="you@example.com" value="<%= typeof email != 'undefined' ? email : '' %>">
                    </div>
                    <div class="form-group">
                        <label for="register-password">Create Password *</label>
                        <input type="password" id="register-password" name="password" required placeholder="Minimum 8 characters">
                    </div>
                     <div class="form-group">
                        <label for="register-confirm-password">Confirm Password *</label>
                        <input type="password" id="register-confirm-password" name="confirm_password" required placeholder="Re-enter your password">
                    </div>
                     <div class="form-group">
                        <label class="group-title">Account Type *</label>
                        <div class="form-check">
                            <input type="radio" id="type-customer" name="account_type" value="customer" <%= (typeof account_type != 'undefined' && account_type == 'customer') || typeof account_type == 'undefined' ? 'checked' : '' %>>
                            <label for="type-customer"> I'm a Customer (Looking for services/products)</label>
                        </div>
                        <div class="form-check">
                            <input type="radio" id="type-seller" name="account_type" value="seller" <%= typeof account_type != 'undefined' && account_type == 'seller' ? 'checked' : '' %>>
                            <label for="type-seller"> I'm a Seller (Want to list services/products)</label>
                        </div>
                     </div>
                     <div class="form-check">
                         <input type="checkbox" id="register-terms" name="terms" required>
                         <label for="register-terms">I agree to the <a href="/terms" target="_blank">Terms of Service</a> and <a href="/privacy" target="_blank">Privacy Policy</a>.*</label>
                     </div>
                    <button type="submit" class="btn btn-primary" style="width: 100%; padding: 14px; margin-top: 15px;">Register</button>
                </form>
                 <p class="form-switch-links text-muted">
                    Already have an account? <a href="#login" id="show-login">Login Here</a>
                </p>
             </div>
        </div>
    </div>
</main>

<%- include('partials/footer') %>